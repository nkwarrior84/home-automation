<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abhay.homeautomationandsecurity">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/nav_image1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nav_image1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomePage"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Homepage2" android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity android:name=".AccessMode" android:label="Automation Mode"
            android:screenOrientation="portrait" />
        <activity android:name=".SecurityMode" android:label="Security Mode"
            android:screenOrientation="portrait" />
        <activity android:name=".AccessSwitchPage" android:label="Switch Preferences"
            android:screenOrientation="portrait" />
        <activity android:name=".SwitchList" ></activity>
    </application>

</manifest>